<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Error" internalLogFile="c:\logs\nlog-internal.log">

  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <targets async="true">
    <target xsi:type="File" name="LogFile"
            fileName="C:/Logs/ContactOne/RelatorioAtendimentosChat/${date:yyyy}/${date:format=MM}/${date:format=dd}/${date:format=HH}/PortalProcessos.log"
            layout="${longdate}|${uppercase:${level}}|${aspnet-traceidentifier}|${aspnet-user-identity}|${aspnet-request-url}|${logger}| ${message} | ${exception:format=ToString}" />
  </targets>

  <!--layout="${longdate}|${uppercase:${level}}|${aspnet-sessionid}|${aspnet-request:serverVariable=remote_addr} |${aspnet-user-identity}|${aspnet-request:serverVariable=URL}|${aspnet-request:serverVariable=QUERY_STRING}|${logger} -> ${message} | ${exception:format=ToString}" />-->

  <rules>
    <!--Skip non-critical Microsoft logs and so log only own logs-->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <!-- BlackHole without writeTo -->
    <logger name="*" minlevel="Trace" writeTo="LogFile" />
  </rules>
</nlog>